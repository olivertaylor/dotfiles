# Start by saying that anything ending in .zsh in my dotfiles folder should be sourced
typeset -U config_files
config_files=(~/code/dotfiles/**/*.zsh)
source ~/code/private-dotfiles/localrc.zsh

# Then load the actual files
for file in ${(M)config_files}
do
  source $file
done

unset config_files

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

source ~/code/other-repos/fzf-marks/fzf-marks.plugin.zsh
#
# Base16 Shell
BASE16_SHELL="$HOME/.config/base16-shell/scripts/base16-oceanicnext.sh"
[[ -s $BASE16_SHELL ]] && source $BASE16_SHELL
