#!/usr/bin/env bash

export TERM=dumb
export SHELL=rc
export PAGER=nobs
tabstop=4

fixfont='/mnt/font/IBMPlexMono/12a/font'
varfont='/mnt/font/IBMPlexSans/14a/font'

# If argument list is empty, open acme scratch file
if test -z $1; then
	if [[ $(hostname -s) = "MacBook-Pro" ]]; then
		exec acme -a -f $varfont -F $fixfont /Users/olivertaylor/Dropbox/acme/scratch &
	else
		exec acme -a -f $varfont -F $fixfont /Users/olivertaylor/dropbox/operations/acme &
	fi
else
	exec acme -a -f $varfont -F $fixfont $* &
fi


