#!/usr/bin/env bash

export TERM=dumb
export SHELL=rc
export PAGER=nobs

fixfont='/mnt/font/SFMono-Regular/13a/font'
varfont='/mnt/font/SFProText-Regular/14a/font'

# If argument list is empty, open acme scratch file
if test -z $1; then
	exec acme -a -f $varfont -F $fixfont /Users/olivertaylor/Dropbox/acme/scratch
else
	exec acme -a -f $varfont -F $fixfont $*
fi

