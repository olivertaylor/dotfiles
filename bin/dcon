#!/usr/bin/ruby
ARGF.set_encoding(Encoding::UTF_8)

# Read input
d = ARGF.read

d = d.gsub(/\n/, "\n\n")

# Quick conversions
d = d.gsub(/^g:: *(.+\n)\n?/, 'GREEN' + "\n" + '\1' + "\n")
d = d.gsub(/^z:: *(.+\n)\n?/, 'ZIMMER' + "\n" + '\1' + "\n")
d = d.gsub(/^t:: *(.+\n)\n?/, 'TORRES' + "\n" + '\1' + "\n")
d = d.gsub(/^w:: *(.+\n)\n?/, 'WOO' + "\n" + '\1' + "\n")
d = d.gsub(/^r:: *(.+\n)\n?/, 'RUBY' + "\n" + '\1' + "\n")
d = d.gsub(/^a:: *(.+\n)\n?/, 'PRES. ARCHER' + "\n" + '\1' + "\n")

# Any line with 2 colons in it will get transformed by this:
d = d.gsub(/^(.+?):: *(.+\n)\n?/){|s| $1.upcase + "\n" + $2 + "\n"}

# clean-up empty lines
d = d.gsub(/\n\n(?=\n)|\n\z/, "")

# Print the result
print d

