#!/bin/zsh

function log(){
if [ "$1" = "open" ] ; then
    $EDITOR ~/projects/notes/log.txt
elif [ "$1" = "entry" ] ; then
    echo "\n[$(date "+%Y-%m-%dT%H:%M:%S%z")]" >> ~/projects/notes/log.txt && $EDITOR ~/projects/notes/log.txt
elif [ "$1" = "quick" ] ; then
    echo "\n[$(date "+%Y-%m-%dT%H:%M:%S%z")]" ${@:2} >> ~/projects/notes/log.txt
else
    echo "Options: open, entry (in editor), quick (in prompt)"
fi
}
