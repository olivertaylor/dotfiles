[user]
	name = Oliver Taylor
	email = olivertaylor@me.com
[core]
	excludesfile = /Users/oliver/.gitignore_global
	editor = bbedit --wait --resume
[alias]
	co = checkout
	br = branch
	cm = commit
	st = status
	last = log -1 HEAD
	lg = log --all --graph --pretty=format:'%C(yellow)%h%C(reset) %C(blue)%d%C(reset) %s %C(green)(%cr) %C(cyan)<%an>%C(reset)' --abbrev-commit --date=relative --branches --tags --remotes
	unstage = reset HEAD --
	stash-unapply = !git stash show -p | git apply -R
[apply]
	whitespace = nowarn



[color]
	ui = true
[color "branch"]
	current = red bold
	local = yellow
	remote = green
[color "diff"]
	meta = white
	frag = cyan
	old = red
	new = green
	commit = yellow
[color "status"]
	header = reset
	added = green
	changed = yellow
	untracked = red
[log]
	decorate = full
