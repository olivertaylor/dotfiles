# Some reasonable defaults
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Some aliases to save typing
alias current-dims windowSizeX;windowSizeY
alias center-both move screenOriginX+(screenSizeX-windowSizeX)/2;screenOriginY+(screenSizeY-windowSizeY)/2 ${current-dims}
alias hyper ctrl;shift;alt;cmd

# ------------------------------

# Window Hints
bind esc:cmd hint

# ------------------------------

# Move and Resize - half-screen
bind right:${hyper}    push right bar-resize:screenSizeX/2
bind left:${hyper}     push left  bar-resize:screenSizeX/2

# Full-screen
bind f:${hyper}        throw 0 resize

# Move Windows
bind tab:${hyper}      ${center-both}
bind ]:${hyper}        push right
bind [:${hyper}        push left

# ------------------------------

# Shift Focus
bind right:cmd;ctrl    focus right
bind left:cmd;ctrl     focus left
bind up:cmd;ctrl       focus up
bind down:cmd;ctrl     focus down
