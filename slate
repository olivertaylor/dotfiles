# DEFAULTS
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# ALIASES
alias current-dims windowSizeX;windowSizeY
alias center-both move screenOriginX+(screenSizeX-windowSizeX)/2;screenOriginY+(screenSizeY-windowSizeY)/2 ${current-dims}
alias hyper alt;ctrl;cmd

# WINDOW HINTS
bind esc:cmd hint

# MOVE AND RESIZE - HALF-SCREEN
bind 1:${hyper}        push left  bar-resize:screenSizeX/2
bind 2:${hyper}        push right bar-resize:screenSizeX/2

# FULL-SCREEN
bind 3:${hyper}        corner top-left resize:screenSizeX*1;screenSizeY*1

# RESIZE TO FULL HEIGHT
bind -:${hyper}        sequence   push up none > resize +0 +900%

# MOVE AND RESIZE - 2/3-SCREEN, LEFT
bind 4:${hyper}        push left bar-resize:(screenSizeX/3)*2

# MOVE AND RESIZE - TOP & BOTTOM
bind 5:${hyper}        corner top-left    resize:screenSizeX*1;screenSizeY/2
bind 6:${hyper}        corner bottom-left resize:screenSizeX*1;screenSizeY/2

# MOVE & RESIZE - IN THIRDS
bind 8:${hyper}        push left  bar-resize:screenSizeX/3
bind 9:${hyper}        sequence   push left  bar-resize:screenSizeX/3 > ${center-both}
bind 0:${hyper}        push right bar-resize:screenSizeX/3

# ALIGN WINDOWS
bind =:${hyper}        ${center-both}
bind ]:${hyper}        push right
bind [:${hyper}        push left

# SHIFT FOCUS
bind right:${hyper}    focus right
bind left:${hyper}     focus left
bind up:${hyper}       focus up
bind down:${hyper}     focus down

# MOVE WINDOW TO OTHER SCREEN
bind return:${hyper} move screenOriginX;screenOriginY windowSizeX;windowSizeY next
